<Quiz>:
    GridLayout:
        cols: 1

        Label:
            text: "Pergunta " + str(root.question_number) + " de 3"
            size_hint_y: None
            height: self.texture_size[1]

        Label:
            text: root.question
            size_hint_y: None
            height: self.texture_size[1]

        BoxLayout:
            orientation: "vertical"
            spacing: "5dp"

            MDRectangleFlatButton:
                text: root.options[0]
                on_release: root.check_answer(root.options[0])
            MDRectangleFlatButton:
                text: root.options[1]
                on_release: root.check_answer(root.options[1])
            MDRectangleFlatButton:
                text: root.options[2]
                on_release: root.check_answer(root.options[2])
            MDRectangleFlatButton:
                text: root.options[3]
                on_release: root.check_answer(root.options[3])
            MDRectangleFlatButton:
                text: root.options[4]
                on_release: root.check_answer(root.options[4])


        Label:
            text: "Pontuação: " + str(root.score)
            size_hint_y: None
            height: self.texture_size[1]

<Result>:
    GridLayout:
        cols: 1

        Label:
            text: "Sua pontuação: " + str(root.score)
            size_hint_y: None
            height: self.texture_size[1]

<ScreenManagement>:
    Quiz:
        name: "Quiz"
    Result:
        name: "result"
