<MenuScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: dp(50)
        padding: dp(50)
        Label:
            text: "Quiz BIO"
            font_size: "40sp"
            color: 1, 1, 1, 1
        Button:
            text: "Iniciar Jogo"
            on_release: app.root.current = "questions"
            font_size: "20sp"
        Button:
            text: "Créditos"
            on_release: app.root.current = "credits"
            font_size: "20sp"

<CreditsScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: dp(50)
        padding: dp(50)
        Label:
            text: "Créditos"
            font_size: "40sp"
            color: 1, 1, 1, 1
        Label:
            text: "Desenvolvido por Kiel Moura"
            font_size: "20sp"
            color: 1, 1, 1, 1
        Button:
            text: "Voltar ao menu"
            on_release: app.root.current = "menu"
            font_size: "20sp"

<QuestionsScreen>:
    score: 0
    question_number: 0
    BoxLayout:
        orientation: "vertical"
        spacing: dp(50)
        padding: dp(50)
        Label:
            id: question_label
            font_size: "30sp"
            color: 1, 1, 1, 1
        BoxLayout:
            orientation: "vertical"
            spacing: dp(20)
            padding: dp(20)
            Button:
                id: answer_button_0
                font_size: "20sp"
                on_release: root.on_answer_select(self.text)
            Button:
                id: answer_button_1
                font_size: "20sp"
                on_release: root.on_answer_select(self.text)
            Button:
                id: answer_button_2
                font_size: "20sp"
                on_release: root.on_answer_select(self.text)
            Button:
                id: answer_button_3
                font_size: "20sp"
                on_release: root.on_answer_select(self.text)
        Label:
            id: score_label
            text: f"Pontuação: {root.score}"
            font_size: "20sp"
            color: 1, 1, 1, 1
